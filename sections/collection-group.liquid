        width:55%
    }
    .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(2) .CollectionItem__Content, .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(4) .CollectionItem__Content{
        right:0;
        left:inherit;
        
    }
    #main .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(2) .CollectionItem__Content .SectionHeader__Heading , #main .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(4) .CollectionItem__Content .SectionHeader__Heading{
        padding-left:32px;
    }
    #main .collection-group-wrapper .CollectionList .CollectionItem .SectionHeader__Heading {
        font-size: 35px !important;
        color: #fff;
        
        text-align: left;
      font-family: 'Nunito', sans-serif;
      font-weight: 700;
    }
    #main .collection-group-wrapper .CollectionList .CollectionItem .SectionHeader__Heading::after{
        content: '„Üç';
    position: absolute;
    top: 40px;
    left: 7px;
    font-size: 80%;
    text-shadow: 0px -10px #ffffff;
}

#main .shopify-section .collection-group-wrapper .CollectionItem__Link {
    background: #fff;
    border: inherit;
    color: #fff;
    padding: 12px;
    font-size: 11px!important;
    width: 100%;
    color: #000;
    mix-blend-mode: screen;
    font-size: 20px;
    font-weight: bold;
    width: 72px;
    position: relative;
    margin-top: 140px;
}
#main .shopify-section .collection-group-wrapper .CollectionItem__Link::before{
    text-shadow: 9px -0#631919;
    content: '.';
    font-size: 132%;
    top: -7px;
    position: absolute;
    background: none;
    left: -5px;
}
#main .shopify-section .collection-group-wrapper .CollectionItem__Link::after{
    text-shadow: 9px -0#631919;
    content: '.';
    font-size: 132%;
    top: 33px;
    position: absolute;
    background: none;
    left: 29px;
}
#main .shopify-section .collection-group-wrapper .CollectionItem .CollectionItem__Link:hover{
    background: #a696ff;
    border: inherit; 
    color: inherit
}

@media only screen and (max-width: 1139px) {
    .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(1), .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(4) {
        min-width: 50%;
    }

    .collection-group-wrapper .CollectionItem__Content {
        width:50%;
    }

    .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(2) .CollectionItem__Content, .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(3) .CollectionItem__Content{
        width: 50%;
    }

}

@media only screen and (max-width: 640px) {
    .collection-group-wrapper .CollectionItem__Content {
    position: absolute;
    bottom: 0;
    top:inherit;
    height: 12%;
    background: #0006;
    width: 100%;
    padding: 0px 30px 0 30px;
    text-align: center;
}
#main .collection-group-wrapper .CollectionList .CollectionItem .SectionHeader__Heading::after {
    top:26px;
}
#main .collection-group-wrapper .CollectionList .CollectionItem .SectionHeader__Heading {
    font-size: 20px !important;
    color: #fff;
    font-weight: 600;
    text-align: left;
    padding-top: 16px;
    margin: 0;
}
#main .collection-group-wrapper .CollectionList .CollectionItem .CollectionItem__Content img {
    position: absolute;
    top: -442px;
    width: 22%;
    left: 0;
}
#main .collection-group-wrapper .CollectionList .CollectionItem .CollectionItem__Content .SectionHeader__ButtonWrapper {
    position: absolute;
    top: 10px;
    right: 5px;
    margin-top: 0px;
}
#main .shopify-section .collection-group-wrapper .CollectionItem__Link {
    margin:0;
    width:100%;
}
#main .shopify-section .collection-group-wrapper .CollectionItem__Link::before{
   
    top: -7px;
    
    left: -3px;
}
#main .shopify-section .collection-group-wrapper .CollectionItem__Link::after{
   
    top: 18px;
    
    left: 48px;
}
#main .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(2) .CollectionItem__Content .SectionHeader__Heading, #main .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(4) .CollectionItem__Content .SectionHeader__Heading{
    padding-top:0;
}
.collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(2) .CollectionItem__Content, .collection-group-wrapper .CollectionItem.Carousel__Cell:nth-child(3) .CollectionItem__Content {
    width:100%;
}
}

</style>
{%- capture flickity_options -%}
{
  "prevNextButtons": false,
  "pageDots": {% if section.blocks.size > 1 %}true{% else %}false{% endif %},
  "setGallerySize": true,
  "wrapAround": true,
  "watchCSS": true,
  "dragThreshold": 8
}
{%- endcapture -%}

<section class="collection-group-wrapper" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="collection-list">
  {%- capture collection_items -%}
    {%- for block in section.blocks -%}
      {%- assign collection = collections[block.settings.collection] -%}
      {%- render 'collection-item', block: block, collection: collection, apply_overlay: block.settings.apply_overlay -%}
    {%- endfor -%}
  {%- endcapture -%}

  {%- if section.settings.stack_on_mobile -%}
    <div class="CollectionList CollectionList--grid {% if section.settings.add_spacing %}CollectionList--spaced{% endif %}">
      {{ collection_items }}
    </div>
  {%- else -%}
    <div class="Carousel Carousel--insideDots CollectionList {% if section.settings.add_spacing %}CollectionList--spaced{% endif %}" data-flickity-config='{{ flickity_options }}'>
      {{ collection_items }}
    </div>
  {%- endif -%}
</section>

<style>
  #section-{{ section.id }} .CollectionItem .Heading,
  #section-{{ section.id }} .flickity-page-dots {
    color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CollectionItem__Link {
    color: {{ section.settings.button_color }};
    border-color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CollectionItem__Link::before {
    background-color: {{ section.settings.text_color }};
  }

  @media (-moz-touch-enabled: 0), (hover: hover) {
    #section-{{ section.id }} .CollectionItem__Link:hover {
      color: {{ section.settings.text_color }};
    }
  }
</style>

