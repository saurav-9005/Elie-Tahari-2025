  <script>
    function showZipstore() {
    var zipstoreContainer = document.querySelector('.Container-Zipstore');
    zipstoreContainer.style.display = 'block';
  }
    function findNearbyStores(zipcode) {

       const loader = document.getElementById("loader");
      const geocoder = new google.maps.Geocoder();
      const storeList = document.getElementById("storeList");

      // Show loader while searching
      loader.style.display = "block";
      storeList.innerHTML = "";

      // Geocode the entered ZIP code to get its latitude and longitude
      geocoder.geocode({ 'address': zipcode }, function (results, status) {
        if (status === google.maps.GeocoderStatus.OK) {
          const userLocation = results[0].geometry.location;
          const stores = [];
          const storeLocations = [
            { name: "Elie Tahari Aventura", address: "19575 Biscayne Blvd Suite #1195, Aventura, FL, 33180, United States", location: { lat: 25.957400, lng: -80.141880 } },
            { name: "Elie Tahari Fashion Island", address: "575 Newport Center Dr, Newport Beach, CA, 92660", location: { lat: 33.616910, lng: -117.872550 } },
            { name: "Elie Tahari National Harbor", address: "6800 Oxon Hill Rd #835, Oxon Hill, MD, 20745", location: { lat: 38.795800, lng: -77.001110 } },
            { name: "Elie Tahari Pembroke", address: "427 145th Terrace Suite, 4040 Pembroke Pines, FL, 33027", location: { lat: 25.993094, lng: -80.357246 } },
            { name: "Elie Tahari Santa Monica Place", address: "395 Santa Monica PL, Santa Monica, CA, 90401", location: { lat: 35.10369285111498, lng: -118.68671999632573 } },
             // Add more store locations as needed
          ];

          // Calculate distance between user's location and store locations
          storeLocations.forEach(store => {
            const storeLocation = new google.maps.LatLng(store.location.lat, store.location.lng);
            const distance = google.maps.geometry.spherical.computeDistanceBetween(userLocation, storeLocation) * 0.000621371; // Convert meters to miles
            if (distance <= 30) {
              stores.push({ ...store, distance: distance.toFixed(2) });
            }
          });

          displayStores(stores);
        } else {
          displayNoStoresMessage();
        }
        // Hide loader after search completes
        loader.style.display = "none";
      });
    }

    function displayStores(stores) {
      const storeList = document.getElementById("storeList");
      storeList.innerHTML = "";

      if (stores.length === 0) {
        displayNoStoresMessage();
      } else {
        stores.forEach(store => {
          const storeDiv = document.createElement("div");
          storeDiv.classList.add("store");
          storeDiv.innerHTML = `
            <p><strong>${store.name}</strong></p>
            <p>${store.address}</p>
            <p class="distance">Distance: ${store.distance} miles</p>
            <a href="https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(store.address)}" target="_blank">Get Direction</a>
          `;
          storeList.appendChild(storeDiv);
        });
      }
    }

    function displayNoStoresMessage() {
      const storeList = document.getElementById("storeList");
      storeList.innerHTML = "<p>Sorry, no nearby stores found.</p> <a class='nostrore_online' target='_blank' href='https://www.elietahari.com/a/return'>Return Online.</a>";
    }

    document.getElementById("searchBtn").addEventListener("click", function () {
      const zipcode = document.getElementById("zipcode").value;
      findNearbyStores(zipcode);
    });
  </script>

